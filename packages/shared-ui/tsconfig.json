{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strict": true,
    "noEmit": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "components": ["components"]
    }
  },
  "include": ["./components"],
  "exclude": ["./dist", "./node_modules", "**/*.test.(ts|tsx)"]
}